---
import ImageCard from "../components/ImageCard.astro";
import IntegrationText from "../components/IntegrationText.astro";
---

<section id="screen3" class="integration_body">
    <div class="integration-bg-effects">
        <div class="floating-orb orb-1"></div>
        <div class="floating-orb orb-2"></div>
        <div class="floating-orb orb-3"></div>
    </div>
    <div class="content-wrapper">
        <div class="text">
            <h1 class="integration_text">
                <span class="text-gradient">Integrate</span> with 
                <span class="text-accent">Pocket Genes</span>
            </h1>
            <p class="integration-subtitle">Transform your genomics workflow with our cutting-edge platform</p>
            <div class="features-grid">
                <IntegrationText
                    src="/launch-faster.svg"
                    bold_text="Launch Faster"
                    text="Skip the long development process and go live quickly."
                />
                <IntegrationText
                    src="/save-costs.svg"
                    bold_text="Save Costs"
                    text="Get a powerful genomic platform at a fraction of custom app costs."
                />
                <IntegrationText
                    src="/boost-engagement.svg"
                    bold_text="Boost Engagement"
                    text="Interactive DNA reports increase user retention."
                />
                <IntegrationText
                    src="/scale-easily.svg"
                    bold_text="Scale Easily"
                    text="We manage mobile app development, so you can focus on growing your business."
                />
            </div>
        </div>
        <div class="image-wrapper">
            <ImageCard src="/integrate1.png" alt="Pocket Genes App" />
            <ImageCard src="/integrate2.png" alt="Pocket Genes Card" />
        </div>
    </div>
</section>

<style>
    .integration_body {
        min-height: 100vh;
        position: relative;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        display: flex;
        align-items: center;
        padding: 5rem 5%;
        overflow: hidden;
    }

    /* Background Effects */
    .integration-bg-effects {
        position: absolute;
        inset: 0;
        pointer-events: none;
        z-index: 1;
    }

    .floating-orb {
        position: absolute;
        border-radius: 50%;
        filter: blur(40px);
        opacity: 0.6;
        animation: floating 20s ease-in-out infinite;
    }

    .orb-1 {
        width: 300px;
        height: 300px;
        background: rgba(255, 255, 255, 0.1);
        top: 10%;
        left: 10%;
        animation-delay: 0s;
    }

    .orb-2 {
        width: 200px;
        height: 200px;
        background: rgba(79, 172, 254, 0.2);
        top: 60%;
        right: 20%;
        animation-delay: -10s;
    }

    .orb-3 {
        width: 150px;
        height: 150px;
        background: rgba(240, 147, 251, 0.15);
        bottom: 20%;
        left: 30%;
        animation-delay: -5s;
    }

    @keyframes floating {
        0%, 100% { transform: translateY(0px) rotate(0deg); }
        33% { transform: translateY(-30px) rotate(120deg); }
        66% { transform: translateY(20px) rotate(240deg); }
    }

    .content-wrapper {
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 5rem;
        position: relative;
        z-index: 2;
    }

    .text {
        flex: 1;
        color: var(--text-primary);
    }

    .integration_text {
        font-size: clamp(2.5rem, 6vw, 4.5rem);
        font-weight: 800;
        line-height: 1.2;
        margin-bottom: 1.5rem;
    }

    .text-gradient {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        background-clip: text;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .text-accent {
        color: rgba(255, 255, 255, 0.95);
    }

    .integration-subtitle {
        font-size: clamp(1.1rem, 2.5vw, 1.4rem);
        color: rgba(255, 255, 255, 0.8);
        margin-bottom: 3rem;
        line-height: 1.6;
    }

    .features-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 2rem;
    }

    .image-wrapper {
        flex: 1;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 2rem;
        position: relative;
    }

    /* Responsive Design */
    @media (max-width: 1200px) {
        .content-wrapper {
            flex-direction: column;
            text-align: center;
            gap: 4rem;
        }

        .text {
            width: 100%;
        }

        .features-grid {
            grid-template-columns: 1fr 1fr;
            gap: 1.5rem;
        }

        .image-wrapper {
            flex-direction: row;
            justify-content: center;
            align-items: center;
        }
    }

    @media (max-width: 768px) {
        .integration_body {
            padding: 3rem 4%;
        }

        .content-wrapper {
            gap: 3rem;
        }

        .features-grid {
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }

        .image-wrapper {
            flex-direction: column;
            gap: 1.5rem;
        }
    }

    @media (max-width: 480px) {
        .integration_body {
            padding: 2rem 4%;
        }
        
        .orb-1, .orb-2, .orb-3 {
            display: none;
        }
    }
</style>
