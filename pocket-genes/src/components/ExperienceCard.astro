---
const { src, alt, text, description } = Astro.props;
---

<div class="experience-card">
  <div class="image-wrapper">
    <img class="image-card" src={src} alt={alt} />
    <div class="image-overlay">
      <div class="company-badge">
        <span class="badge-text">{text}</span>
      </div>
    </div>
  </div>
  <div class="card-content">
    <h3 class="company-name">{text}</h3>
    <p class="description_card">{description}</p>
    <div class="card-footer">
      <span class="success-indicator">âœ“ Successful Partnership</span>
    </div>
  </div>
</div>

<style>
  .experience-card {
    background: var(--glass-bg);
    backdrop-filter: blur(20px);
    border: 1px solid var(--glass-border);
    border-radius: 2rem;
    padding: 2rem;
    box-shadow: var(--glass-shadow);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    max-width: 420px;
    position: relative;
    overflow: hidden;
  }

  .experience-card:hover {
    transform: translateY(-12px);
    box-shadow: 
      0 35px 70px -12px rgba(31, 38, 135, 0.5),
      0 0 0 1px rgba(255, 255, 255, 0.2);
    background: rgba(255, 255, 255, 0.15);
  }

  .image-wrapper {
    position: relative;
    border-radius: 1.5rem;
    overflow: hidden;
    margin-bottom: 1.5rem;
  }

  .image-card {
    width: 100%;
    height: 280px;
    object-fit: cover;
    object-position: center;
    transition: transform 0.4s ease;
  }

  .experience-card:hover .image-card {
    transform: scale(1.05);
  }

  .image-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      45deg, 
      rgba(103, 126, 234, 0.3) 0%, 
      rgba(240, 147, 251, 0.2) 100%
    );
    opacity: 0;
    transition: opacity 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .experience-card:hover .image-overlay {
    opacity: 1;
  }

  .company-badge {
    background: var(--glass-bg);
    backdrop-filter: blur(16px);
    border: 1px solid var(--glass-border);
    padding: 0.75rem 1.5rem;
    border-radius: 2rem;
    transform: translateY(20px);
    transition: transform 0.3s ease;
  }

  .experience-card:hover .company-badge {
    transform: translateY(0);
  }

  .badge-text {
    color: var(--text-primary);
    font-weight: 600;
    font-size: 1.1rem;
  }

  .card-content {
    text-align: center;
  }

  .company-name {
    font-size: 1.75rem;
    font-weight: 700;
    background: var(--primary-gradient);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    margin-bottom: 1rem;
    line-height: 1.3;
  }

  .description_card {
    color: var(--text-secondary);
    font-size: 1rem;
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .card-footer {
    padding-top: 1rem;
    border-top: 1px solid var(--glass-border);
  }

  .success-indicator {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    font-weight: 600;
    background: var(--success-gradient);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .experience-card {
      padding: 1.5rem;
      max-width: 350px;
    }

    .image-card {
      height: 220px;
    }

    .company-name {
      font-size: 1.5rem;
    }

    .description_card {
      font-size: 0.95rem;
    }
  }

  @media (max-width: 480px) {
    .experience-card {
      padding: 1.25rem;
      max-width: 300px;
    }

    .image-card {
      height: 180px;
    }

    .company-name {
      font-size: 1.25rem;
    }

    .description_card {
      font-size: 0.9rem;
    }
  }
</style>
