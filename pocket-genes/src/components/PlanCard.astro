---
import PlanCircle from "./PlanCircle.astro";

const { title, text, subtext, description, plan, isHighlighted } = Astro.props;
const containerClass = isHighlighted ? "container highlighted" : "container";
---

<div class={containerClass}>
  <div>
    <PlanCircle
      description={description}
      plan={plan}
      isHighlighted={isHighlighted}
    />
  </div>
  <h3>{title}</h3>
  <p id="text">{text}</p>
  <p id="subtext">{subtext}</p>
</div>

<style>
  .container {
    display: flex;
    flex-direction: column;
    align-items: center;
    background: var(--glass-bg);
    backdrop-filter: blur(20px);
    border: 1px solid var(--glass-border);
    border-radius: 2rem;
    padding: 2.5rem 1.5rem;
    box-shadow: var(--glass-shadow);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
    min-height: 420px;
  }

  .container::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      rgba(255, 255, 255, 0.1) 0%,
      rgba(255, 255, 255, 0.05) 50%,
      rgba(255, 255, 255, 0.02) 100%
    );
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .container:hover {
    transform: translateY(-8px) scale(1.02);
    box-shadow: 
      0 25px 50px -12px rgba(31, 38, 135, 0.4),
      0 0 0 1px rgba(255, 255, 255, 0.2);
    background: rgba(255, 255, 255, 0.15);
  }

  .container:hover::before {
    opacity: 1;
  }

  h3 {
    text-align: center;
    font-size: clamp(1.75rem, 3vw, 2.5rem);
    margin: 1rem 0 1.5rem 0;
    color: var(--text-primary);
    font-weight: 700;
    line-height: 1.3;
  }

  #text {
    text-align: center;
    color: var(--text-secondary);
    width: 90%;
    font-size: clamp(1.1rem, 2vw, 1.6rem);
    line-height: 1.5;
    margin-bottom: 1rem;
  }

  #subtext {
    text-align: center;
    color: var(--text-accent);
    width: 85%;
    font-size: clamp(1rem, 1.8vw, 1.25rem);
    margin-top: 0;
    line-height: 1.4;
    font-style: italic;
  }

  .highlighted {
    background: linear-gradient(135deg, rgba(103, 126, 234, 0.25) 0%, rgba(79, 172, 254, 0.2) 100%);
    border: 2px solid rgba(103, 126, 234, 0.4);
    transform: translateY(-1rem) scale(1.05);
    box-shadow: 
      0 30px 60px -12px rgba(103, 126, 234, 0.4),
      0 0 0 1px rgba(103, 126, 234, 0.3),
      inset 0 1px 0 rgba(255, 255, 255, 0.2);
  }

  .highlighted::before {
    background: linear-gradient(
      135deg,
      rgba(103, 126, 234, 0.15) 0%,
      rgba(79, 172, 254, 0.1) 50%,
      rgba(240, 147, 251, 0.05) 100%
    );
    opacity: 1;
  }

  .highlighted h3 {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .highlighted #text {
    color: rgba(255, 255, 255, 0.9);
  }

  .highlighted #subtext {
    color: rgba(255, 255, 255, 0.8);
    font-weight: 500;
  }

  .highlighted:hover {
    transform: translateY(-1.5rem) scale(1.08);
    box-shadow: 
      0 40px 80px -12px rgba(103, 126, 234, 0.5),
      0 0 0 2px rgba(103, 126, 234, 0.4),
      inset 0 1px 0 rgba(255, 255, 255, 0.3);
  }

  @media screen and (max-width: 768px) {
    .container {
      padding: 2rem 1.5rem;
      min-height: auto;
      margin: 0;
    }

    .highlighted {
      transform: translateY(-0.5rem) scale(1.02);
      margin: 0;
    }

    .highlighted:hover {
      transform: translateY(-0.8rem) scale(1.04);
    }
  }

  @media (min-width: 769px) and (max-width: 1300px) {
    .container {
      padding: 2rem 1.5rem;
      min-height: 380px;
    }

    .highlighted {
      transform: translateY(-0.75rem) scale(1.03);
    }

    .highlighted:hover {
      transform: translateY(-1rem) scale(1.05);
    }
  }

  @media (max-width: 480px) {
    .container {
      padding: 1.5rem 1rem;
      min-height: auto;
    }

    .highlighted {
      transform: translateY(0) scale(1);
    }

    .highlighted:hover {
      transform: translateY(-0.5rem) scale(1.02);
    }
  }
</style>
