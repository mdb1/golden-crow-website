---
const { title, description, color } = Astro.props;

const colorMapping = {
  primary: 'var(--primary-gradient)',
  secondary: 'var(--secondary-gradient)',
  accent: 'var(--accent-gradient)',
  success: 'var(--success-gradient)',
  warning: 'var(--warning-gradient)'
};

const gradientColor = colorMapping[color] || color || 'var(--primary-gradient)';
---

<div class="panel-item" data-color={color}>
    <div class="icon-wrapper">
        <div class="gradient-icon" style={`background: ${gradientColor}`}></div>
    </div>
    <div class="content">
        <h3 class="panel-title">{title}</h3>
        <p class="panel-description">{description}</p>
    </div>
    <div class="hover-effect"></div>
</div>

<style>
    .panel-item {
        position: relative;
        display: flex;
        align-items: center;
        gap: 1.5rem;
        padding: 2rem;
        margin: 1rem 0;
        background: var(--glass-bg);
        backdrop-filter: blur(20px);
        border: 1px solid var(--glass-border);
        border-radius: 1.5rem;
        box-shadow: var(--glass-shadow);
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        cursor: pointer;
        overflow: hidden;
    }

    .panel-item:hover {
        transform: translateY(-8px) translateX(8px);
        box-shadow: 
            0 25px 50px -12px rgba(31, 38, 135, 0.5),
            0 0 0 1px rgba(255, 255, 255, 0.2);
        background: rgba(255, 255, 255, 0.15);
        border-color: rgba(255, 255, 255, 0.3);
    }

    .icon-wrapper {
        position: relative;
        flex-shrink: 0;
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.1);
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
    }

    .panel-item:hover .icon-wrapper {
        transform: scale(1.1) rotate(5deg);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
    }

    .gradient-icon {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease;
    }

    .panel-item:hover .gradient-icon {
        transform: scale(1.2);
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.4);
        filter: brightness(1.1);
    }

    .content {
        flex: 1;
        z-index: 2;
    }

    .panel-title {
        font-size: clamp(1.25rem, 3vw, 1.75rem);
        font-weight: 700;
        color: var(--text-primary);
        margin: 0 0 0.75rem 0;
        line-height: 1.3;
        transition: all 0.3s ease;
    }

    .panel-item:hover .panel-title {
        background: var(--accent-gradient);
        background-clip: text;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .panel-description {
        font-size: clamp(0.95rem, 2.5vw, 1.15rem);
        color: var(--text-secondary);
        margin: 0;
        line-height: 1.6;
        transition: color 0.3s ease;
    }

    .panel-item:hover .panel-description {
        color: rgba(255, 255, 255, 0.9);
    }

    .hover-effect {
        position: absolute;
        inset: 0;
        background: linear-gradient(
            135deg,
            rgba(103, 126, 234, 0.1) 0%,
            rgba(240, 147, 251, 0.1) 100%
        );
        opacity: 0;
        transition: opacity 0.3s ease;
        pointer-events: none;
    }

    .panel-item:hover .hover-effect {
        opacity: 1;
    }

    /* Pulse animation for gradient icons */
    @keyframes iconPulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.05); }
    }

    .gradient-icon {
        animation: iconPulse 3s ease-in-out infinite;
    }

    /* Color-specific animations */
    .panel-item[data-color="primary"]:hover {
        border-color: rgba(103, 126, 234, 0.4);
    }

    .panel-item[data-color="secondary"]:hover {
        border-color: rgba(240, 147, 251, 0.4);
    }

    .panel-item[data-color="accent"]:hover {
        border-color: rgba(79, 172, 254, 0.4);
    }

    .panel-item[data-color="success"]:hover {
        border-color: rgba(67, 233, 123, 0.4);
    }

    .panel-item[data-color="warning"]:hover {
        border-color: rgba(250, 112, 154, 0.4);
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .panel-item {
            padding: 1.5rem;
            gap: 1rem;
        }

        .panel-item:hover {
            transform: translateY(-4px);
        }

        .icon-wrapper {
            width: 50px;
            height: 50px;
        }

        .gradient-icon {
            width: 30px;
            height: 30px;
        }
    }

    @media (max-width: 480px) {
        .panel-item {
            padding: 1.25rem;
            margin: 0.75rem 0;
        }

        .icon-wrapper {
            width: 45px;
            height: 45px;
        }

        .gradient-icon {
            width: 25px;
            height: 25px;
        }
    }
</style>